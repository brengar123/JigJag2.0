<?xml version="1.0" encoding="UTF-8"?>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Unscrambler"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_marginTop="24dp"
        android:id="@+id/Word"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/Title"
        app:layout_constraintEnd_toEndOf="@+id/Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="What word is this?"
        android:layout_marginTop="16dp"
        android:id="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/Title"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:text="Hint: "
        android:layout_marginTop="32dp"
        android:id="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/Word"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/Definition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toTopOf="@+id/textView12" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Your guess is:"
        android:layout_marginTop="32dp"
        android:id="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/Definition"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="16dp"
        android:id="@+id/InputGuess"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        android:inputType="textPersonName"
        android:ems="10"/>

    <TextView
        android:id="@+id/Response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/InputGuess"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/InputGuess"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.046" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/InputGuess"
        app:layout_constraintEnd_toEndOf="@+id/InputGuess"
        android:text="Enter"
        android:layout_marginTop="16dp"
        android:id="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/InputGuess"/>

</androidx.constraintlayout.widget.ConstraintLayout>