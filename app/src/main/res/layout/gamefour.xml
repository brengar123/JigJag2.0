<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/G4bt_Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="START" />

    <Button
        android:id="@+id/G4bt_Main"
        android:layout_width="match_parent"
        android:layout_height="508dp"
        android:layout_above="@+id/G4bt_Start"
        android:layout_below="@+id/G4tv_Record"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="48dp"
        android:background="@color/red"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="64dp" />


    <TextView
        android:id="@+id/G4tv_Record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/G4tv_Title"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:gravity="center"
        android:text=""
        android:textSize="24dp" />

    <TextView
        android:id="@+id/G4tv_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Flash React!"
        android:textSize="56dp" />

</RelativeLayout>